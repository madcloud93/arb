NODE_ENV=production

SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

PROFIT_THRESHOLD_PERCENT=0.2
TRADE_SIZE_USDC=100
MAX_OPPORTUNITIES_PER_MINUTE=10

LOG_LEVEL=info
LOG_FILE=logs/arbitrage.log

CACHE_TTL_SECONDS=30
PRICE_HISTORY_SIZE=1000

RAYDIUM_ENABLED=true
ORCA_ENABLED=true
SERUM_ENABLED=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL_MS=30000
WS_RECONNECT_DELAY_MS=5000

# Optional: Custom RPC endpoints for better performance
# SOLANA_RPC_URL=https://your-premium-rpc-endpoint.com
# SOLANA_WS_URL=wss://your-premium-ws-endpoint.com
